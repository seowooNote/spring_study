<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="dev" class="sample7.Developer" c:a-ref="emp1"  c:dept="개발1팀"></bean>
	<bean id="emp1" class="sample7.Emp" c:name="강호동" c:salary="1500000"></bean>
	<bean id="eng" class="sample7.Engineer" c:a-ref="emp1" c:dept="기술1팀"></bean>
	<bean id="emp2" class="sample7.Emp" c:name="이순신" c:salary="2500000" ></bean>
</beans>
